{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "schedule": [
    "at any time"
  ],
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 10,
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$/",
        "/(^|/)action\\.ya?ml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-zA-Z0-9-._]+?) depName=(?<depName>[^\\s]+?)(?: (?:lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?\\s+[A-Za-z0-9_]+?_VERSION\\s*:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^(\\.github\\/workflows)\\/[^/]+\\.ya?ml$/"
      ],
      "matchStrings": [
        "image: (?<depName>[^:]+):(?<currentValue>[^@\\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "ignorePaths": [
    "docker-compose.yml"
  ],
  "packageRules": [
    {
      "description": "Security updates - immediate processing",
      "isVulnerabilityAlert": true,
      "addLabels": [
        "security"
      ],
      "automerge": true,
      "schedule": [
        "at any time"
      ],
      "prPriority": 10,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Go major updates - separate PRs, manual review",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "go",
        "major"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Go dependencies - group minor and patch updates",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Go dependencies",
      "automerge": true,
      "addLabels": [
        "go"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "GitHub Actions - group all updates with SHA pinning",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": true,
      "addLabels": [
        "github-actions"
      ],
      "minimumReleaseAge": "2 days",
      "pinDigests": true
    },
    {
      "description": "Docker images - group minor and patch updates",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Docker images",
      "automerge": true,
      "addLabels": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "description": "Docker major updates - separate PRs",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "docker",
        "major"
      ],
      "pinDigests": true
    }
  ]
}
