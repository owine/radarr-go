{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "schedule": [
    "at any time"
  ],
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 10,
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "postUpdateOptions": [
      "gomodTidy",
      "gomodUpdateImportPaths",
      "gomodMassage"
    ],
  "gomod": {
    "enabled": true
  },
  "ignorePaths": [
    "docker-compose.yml"
  ],
  "packageRules": [
    {
      "description": "Security updates - immediate processing",
      "isVulnerabilityAlert": true,
      "addLabels": [
        "security"
      ],
      "automerge": true,
      "schedule": [
        "at any time"
      ],
      "prPriority": 10,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Go major updates - separate PRs, manual review",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "go",
        "major"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Go dependencies - group minor and patch updates with version constraints",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Go dependencies",
      "automerge": true,
      "addLabels": [
        "go"
      ],
      "minimumReleaseAge": "3 days",
      "rangeStrategy": "pin",
      "semanticCommits": "enabled"
    },
    {
      "description": "Go toolchain updates - separate handling",
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "golang"
      ],
      "groupName": "Go toolchain",
      "automerge": false,
      "addLabels": [
        "go",
        "toolchain"
      ],
      "minimumReleaseAge": "7 days",
      "prPriority": 5
    },
    {
      "description": "Go direct dependencies - enhanced tracking",
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "require"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Go direct dependencies",
      "automerge": true,
      "addLabels": [
        "go",
        "direct"
      ],
      "minimumReleaseAge": "2 days",
      "prPriority": 8
    },
    {
      "description": "Go indirect dependencies - group all updates",
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "groupName": "Go indirect dependencies",
      "automerge": true,
      "addLabels": [
        "go",
        "indirect"
      ],
      "minimumReleaseAge": "5 days",
      "prPriority": 3,
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Go workspace and tooling dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "golang.org/x/**",
        "go.uber.org/**"
      ],
      "groupName": "Go tooling and workspace",
      "automerge": true,
      "addLabels": [
        "go",
        "tooling"
      ],
      "minimumReleaseAge": "3 days",
      "prPriority": 6
    },
    {
      "description": "Testing and development dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "github.com/stretchr/testify",
        "github.com/golang-migrate/migrate/**",
        "**/testify",
        "**/mock*",
        "**/test*"
      ],
      "groupName": "Testing dependencies",
      "automerge": true,
      "addLabels": [
        "go",
        "testing"
      ],
      "minimumReleaseAge": "1 day",
      "prPriority": 7
    },
    {
      "description": "Database drivers and ORM dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "gorm.io/**",
        "github.com/jackc/pgx/**",
        "github.com/go-sql-driver/mysql",
        "**/driver/**",
        "**/gorm*"
      ],
      "groupName": "Database dependencies",
      "automerge": true,
      "addLabels": [
        "go",
        "database"
      ],
      "minimumReleaseAge": "4 days",
      "prPriority": 9
    },
    {
      "description": "GitHub Actions - group all updates with SHA pinning",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": true,
      "addLabels": [
        "github-actions"
      ],
      "minimumReleaseAge": "2 days",
      "pinDigests": true,
      "followTag": true
    },
    {
      "description": "Docker images - group minor and patch",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Docker images",
      "automerge": true,
      "addLabels": [
        "docker"
      ]
    },
    {
      "description": "Docker major updates - separate PRs",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "docker",
        "major"
      ]
    }
  ]
}
