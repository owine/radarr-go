{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "schedule": [
    "at any time"
  ],
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 10,
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "GO_VERSION:\\s*['\"]?(?<currentValue>\\d+\\.\\d+\\.\\d+)['\"]?"
      ],
      "depNameTemplate": "golang",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Security updates - immediate processing",
      "isVulnerabilityAlert": true,
      "addLabels": [
        "security"
      ],
      "automerge": true,
      "schedule": [
        "at any time"
      ],
      "prPriority": 10,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Go major updates - separate PRs, manual review",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "go",
        "major"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Go dependencies - group minor and patch updates",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Go dependencies",
      "automerge": true,
      "addLabels": [
        "go"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "GitHub Actions - group all updates with SHA pinning",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": true,
      "addLabels": [
        "github-actions"
      ],
      "minimumReleaseAge": "2 days",
      "pinDigests": true
    },
    {
      "description": "Docker images - group minor and patch updates",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Docker images",
      "automerge": true,
      "addLabels": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "description": "Docker major updates - separate PRs",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "docker",
        "major"
      ],
      "pinDigests": true
    },
    {
      "description": "All docker-compose files - patch updates without SHA pinning",
      "matchManagers": [
        "docker-compose"
      ],
      "matchFileNames": [
        "docker-compose.yml",
        "docker-compose.dev.yml",
        "docker-compose.test.yml"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "addLabels": [
        "docker",
        "compose"
      ],
      "pinDigests": false
    },
    {
      "description": "Go version updates in GitHub Actions - auto-merge patch updates",
      "matchManagers": [
        "custom.regex"
      ],
      "matchDepNames": [
        "golang"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "addLabels": [
        "go-version"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Go version updates in GitHub Actions - manual review for minor/major",
      "matchManagers": [
        "custom.regex"
      ],
      "matchDepNames": [
        "golang"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "go-version",
        "manual-review"
      ],
      "minimumReleaseAge": "7 days"
    }
  ]
}
