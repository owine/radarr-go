{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "customManagers:githubActionsVersions"
  ],
  "schedule": [
    "at any time"
  ],
  "labels": [
    "dependencies"
  ],
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "packageRules": [
    {
      "description": "Go major updates - separate PRs, manual review",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "go",
        "major"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Go dependencies - group minor and patch updates",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Go dependencies",
      "automerge": true,
      "addLabels": [
        "go"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "GitHub Actions - group all updates with SHA pinning",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GHA",
      "automerge": true,
      "addLabels": [
        "github-actions"
      ],
      "minimumReleaseAge": "2 days",
      "pinDigests": true
    },
    {
      "description": "Dockerfile minor/patch updates - grouped with digest pinning",
      "matchManagers": [
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Dockerfile dependencies",
      "automerge": true,
      "addLabels": [
        "docker"
      ],
      "pinDigests": true,
      "minimumReleaseAge": "2 days"
    },
    {
      "description": "Docker-compose minor/patch updates - grouped without digest pinning",
      "matchManagers": [
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Docker Compose dependencies",
      "automerge": true,
      "addLabels": [
        "docker"
      ],
      "pinDigests": false,
      "minimumReleaseAge": "2 days"
    },
    {
      "description": "Dockerfile major updates - separate PRs with digest pinning",
      "matchManagers": [
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "docker",
        "major"
      ],
      "pinDigests": true,
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Docker-compose major updates - separate PRs without digest pinning",
      "matchManagers": [
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "docker",
        "major"
      ],
      "pinDigests": false,
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "npm major updates - separate PRs, manual review",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "npm",
        "major"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "npm dependencies - group minor and patch updates",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "npm dependencies",
      "automerge": true,
      "addLabels": [
        "npm"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "React ecosystem - separate group for React, React-DOM, and related packages",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
        "react-redux",
        "react-router-dom",
        "@types/react-redux",
        "@types/react-router-dom"
      ],
      "groupName": "React ecosystem",
      "automerge": false,
      "addLabels": [
        "npm",
        "react"
      ],
      "minimumReleaseAge": "5 days"
    },
    {
      "description": "Frontend build tools - group Vite, TypeScript, ESLint, PostCSS",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "vite",
        "@vitejs/plugin-react",
        "typescript",
        "typescript-eslint",
        "eslint",
        "@eslint/js",
        "eslint-plugin-react-hooks",
        "eslint-plugin-react-refresh",
        "postcss",
        "postcss-preset-env",
        "autoprefixer"
      ],
      "groupName": "Frontend build tools",
      "automerge": true,
      "addLabels": [
        "npm",
        "build-tools"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Redux toolkit updates - separate group for state management",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "@reduxjs/toolkit"
      ],
      "groupName": "Redux ecosystem",
      "automerge": false,
      "addLabels": [
        "npm",
        "redux"
      ],
      "minimumReleaseAge": "5 days"
    },
    {
      "description": "Security updates - immediate processing with highest priority",
      "matchPackageNames": [
        "*"
      ],
      "isVulnerabilityAlert": true,
      "addLabels": [
        "security"
      ],
      "automerge": true,
      "schedule": [
        "at any time"
      ],
      "prPriority": 10
    }
  ]
}
