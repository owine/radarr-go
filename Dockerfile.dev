FROM golang:1.25.6-alpine@sha256:660f0b83cf50091e3777e4730ccc0e63e83fea2c420c872af5c60cb357dcafb2 AS dev

# Install development tools
RUN apk add --no-cache \
    git \
    curl \
    bash \
    make \
    gcc \
    g++ \
    musl-dev \
    binutils \
    ca-certificates \
    tzdata

# Set timezone
ENV TZ=UTC

# Install air for hot reload
RUN go install github.com/air-verse/air@latest

# Install other development tools
RUN go install github.com/golang-migrate/migrate/v4/cmd/migrate@latest

# Create app directory
WORKDIR /workspace

# Create non-root user for security
RUN adduser -D -s /bin/bash -u 1000 developer && \
    chown -R developer:developer /workspace && \
    chown -R developer:developer /go

# Switch to non-root user
USER developer

# Copy go mod files first for better layer caching
COPY --chown=developer:developer go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY --chown=developer:developer . .

# Create necessary directories
RUN mkdir -p data movies web/static web/templates

# Expose ports
EXPOSE 7878 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:7878/ping || exit 1

# Default command (can be overridden)
CMD ["air"]
